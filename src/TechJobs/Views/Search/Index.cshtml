<h1>@ViewBag.title</h1>

<form action="/Search/Results">
    <h2>Search by:</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key" 
                       checked="@column.Key == 'all''"/>
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>
   
   
    
    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.jobsKVP != null)
{

    <h3>@(ViewBag.jobsKVP.Count / 5) Result(s)</h3>

    // TODO #2 - Loop over jobs dictionary and display all job fields 

    <table>

        @foreach (KeyValuePair<string, string> jobKVP in ViewBag.jobsKVP)
        {
            <tr>
                <td><b>@jobKVP.Key</b></td>
                <td>@jobKVP.Value</td>
            </tr>

            if (jobKVP.Key.Equals("core competency"))
            {
                <tr>
                    <td> </td>
                </tr>

            }

        }
    </table>




}